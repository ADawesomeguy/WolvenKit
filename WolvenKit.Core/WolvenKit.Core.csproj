<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageId>WolvenKit.Core</PackageId>
    <Authors>Hambalk√≥ Bence, Moritz Baron</Authors>
    <Company>WolvenKit</Company>
    <Product>WolvenKit.Core</Product>
    <Description>Core file formats for the WolvenKit Mod Editor.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/WolvenKit/WolvenKit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/WolvenKit/WolvenKit</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>wolvenkit, witcher3, cyberpunk2077</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>1.3</Version>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <DebugType>embedded</DebugType>
    <Platforms>x64</Platforms>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="lib\kraken.dll" />
    <None Remove="lib\libooz.so" />
    <None Remove="lib\libooz.dylib" />
    <None Remove="lib\ooz.dll" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib\kraken.dll">
      <PackagePath>lib\net5.0</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="lib\ooz.dll" Condition=" '$(OS)' == 'Windows_NT' ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="lib\libooz.so" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="lib\libooz.dylib" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DynamicData" Version="7.4.9" />
    <PackageReference Include="FastMember" Version="1.5.0" />
    <PackageReference Include="DotNetHelper.FastMember.Extension" Version="2.0.0" />
    <PackageReference Include="CsvHelper" Version="27.2.1" />
    <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
    <PackageReference Include="protobuf-net.Core" Version="3.0.101" />
    <PackageReference Include="ReactiveUI" Version="17.1.17" />
    <PackageReference Include="semver" Version="2.0.6" />
    <PackageReference Include="System.Reflection.MetadataLoadContext" Version="6.0.0" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="3.3.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.1" />
  </ItemGroup>

</Project>
